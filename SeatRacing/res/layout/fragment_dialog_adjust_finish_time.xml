<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="18dp" >

    <TextView
        android:id="@+id/edit_times_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="@string/edit_times_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <NumberPicker
        android:id="@+id/minutes_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seconds_wheel"
        android:layout_toLeftOf="@+id/seconds_wheel" />

    <NumberPicker
        android:id="@+id/seconds_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_times_label"
        android:layout_centerHorizontal="true" />

    <NumberPicker
        android:id="@+id/milliseconds_wheel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/seconds_wheel"
        android:layout_toRightOf="@+id/seconds_wheel" />

</RelativeLayout>