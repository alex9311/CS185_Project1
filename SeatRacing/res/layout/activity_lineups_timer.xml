<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.ucsb.cs.cs185.seatracing.LineupsTimerActivity" >

    
    <!-- This is the container for the viewpager and timer results frag -->
    <FrameLayout
        android:id="@+id/lineups_timer_container"
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dip" />
        
    <Button
        android:id="@+id/button_main_timer"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dip"
        android:layout_margin="5dp"
        android:text="@string/timer_start_button" />

</LinearLayout>